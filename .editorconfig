[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

[*.json]
insert_final_newline = false
indent_style = space
indent_size = 2

[*.yml]
insert_final_newline = false
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
